<Window x:Class="_0503_ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0503_ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="435" Width="308" >
    <Grid>
        <TextBox Name="seatbox"  HorizontalAlignment="Left" Height="22" Margin="18,21,0,0" TextWrapping="Wrap" Text="이름을 입력하세요" VerticalAlignment="Top" Width="184" TextAlignment="Center" GotFocus="seatbox_GotFocus"/>
        <Button Name="btnJoin" Content="로그인" HorizontalAlignment="Left" Margin="220,21,0,0" VerticalAlignment="Top" Width="60" Height="22" Click="btnJoin_Click"/>
        <ListBox Name="chatlist" HorizontalAlignment="Left" Height="272" Margin="18,59,0,0" VerticalAlignment="Top" Width="262"/>
        <TextBox Name="msgbox" HorizontalAlignment="Left" Height="24" Margin="18,348,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198"/>
        <Button Name="btnSend" Content="전송" HorizontalAlignment="Left" Margin="221,350,0,0" VerticalAlignment="Top" Width="60" Click="btnSend_Click"/>
    </Grid>
</Window>
